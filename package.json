{
  "name": "mcp-apifox-server",
  "version": "1.0.3",
  "type": "module",
  "description": "MCP 服务器：读取项目控制器并与 Apifox 同步 OpenAPI/自动化测试",
  "main": "dist/index.js",
  "bin": {
    "mcp-apifox": "dist/cli.js",
    "mcp-apifox-server": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts --out-dir dist",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "mcp",
    "apifox",
    "openapi",
    "cli",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.0",
    "dotenv": "^17.2.3",
    "fast-glob": "^3.3.2",
    "node-fetch": "^3.3.2",
    "openapi-types": "^12.1.3",
    "pino": "^9.5.0",
    "pino-pretty": "^11.2.2",
    "typescript": "^5.9.3",
    "yargs": "^17.7.2",
    "yargs-parser": "^21.1.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "vitest": "^3.2.4"
  }
}
